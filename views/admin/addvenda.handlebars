    <div class="erro">{{texto}}</div>
{{else}}

{{/each}}

<h3 class="tit_h3">Adicionar Produto</h3>
<form action="/admin/produto/new" method="post" class="form-fornecedor">
    <label for="nome" class="form-label">Nome: </label>
    <input type="text" name="nome" id="nome" placeholder="Nome">
    <label for="valor" class="form-label">Valor: </label>
    <input type="text" name="valor" id="valor" placeholder="valor">
    <label for="descricao" class="form-label">Descrição: </label>
    <textarea name="descricao" id="descricao" cols="30" rows="10">{{produto.descricao}}</textarea>
    <button type="submit" class="botao">Finalizar Compra</button>
</form>
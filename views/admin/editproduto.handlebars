    <div class="erro">{{texto}}</div>
{{else}}

{{/each}}

<h3>Editar Produto</h3>
<form action="/admin/produto/edit" method="post" class="form-fornecedor">
    <input type="hidden" name="id" value="{{produto._id}}">
    <label for="nome">Nome: </label>
    <input type="text" name="nome" id="nome" placeholder="Nome" value="{{produto.nome}}">
    <label for="valor">Valor: </label>
    <input type="text" name="valor" id="valor" placeholder="valor" value="{{produto.valor}}">
    <button type="submit" class="botao">Editar Produto</button>
</form>